<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewRestoran"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/image.spisok.restaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/veranda"
            android:scaleType="centerCrop"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:numStars="5"
            android:stepSize="0.5"
            android:rating="2.5"
            android:layout_gravity="right"
            style="?android:attr/ratingBarStyleSmall"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name.spisok.restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Гриль-Бар VERANDA"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"/>
    <TextView
        android:id="@+id/description.spisok.restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="​Горячие вторые блюда • ​Десерты​ • Корпоративные обеды​ • Паста​ • Салаты​ • Супы​ • Бургеры"/>


</LinearLayout>